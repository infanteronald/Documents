# Configuración de Variables de Entorno - Sequoia Speed
# 
# Copie este archivo como .env y configure las variables según su entorno

# Configuración de la aplicación
APP_NAME="Sequoia Speed - Sistema de Pedidos"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://sequoiaspeed.com.co/pedidos

# Base de datos
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=motodota_factura_electronica
DB_USERNAME=motodota_facturacion
DB_PASSWORD=

# Configuración SMTP
SMTP_HOST=mail.sequoiaspeed.com.co
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=ventas@sequoiaspeed.com.co
SMTP_FROM_NAME="Sequoia Speed"

# Configuración Bold PSE
BOLD_API_KEY=
BOLD_PUBLIC_KEY=
BOLD_ENVIRONMENT=production
BOLD_WEBHOOK_SECRET=
BOLD_PRODUCTION_MODE=true

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Configuración de logs
LOG_LEVEL=info
LOG_MAX_FILES=30

# Cache
CACHE_DRIVER=file
CACHE_TTL=3600

# Configuración de sesión
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Mantenimiento
MAINTENANCE_MODE=false
