# ===============================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO - SEQUOIA SPEED
# ===============================================
# 
# INSTRUCCIONES:
# 1. Copie este archivo como .env
# 2. Configure las variables según su entorno
# 3. NUNCA commita el archivo .env al repositorio
# 4. Asegúrese de que .env esté en .gitignore
#
# ===============================================

# ===============================================
# CONFIGURACIÓN DE APLICACIÓN
# ===============================================
APP_NAME="Sequoia Speed - Sistema de Pedidos"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://sequoiaspeed.com.co/pedidos

# ===============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===============================================
DB_HOST=68.66.226.124
DB_PORT=3306
DB_DATABASE=motodota_factura_electronica
DB_USERNAME=motodota_facturacion
DB_PASSWORD=your_secure_password_here
DB_CHARSET=utf8mb4

# ===============================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ===============================================
MAIL_HOST=mail.sequoiaspeed.com.co
MAIL_PORT=587
MAIL_USERNAME=your_email@sequoiaspeed.com.co
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS=ventas@sequoiaspeed.com.co
MAIL_FROM_NAME="Sequoia Speed"
MAIL_ENCRYPTION=tls

# ===============================================
# CONFIGURACIÓN DE PAGOS BOLD PSE
# ===============================================
BOLD_API_KEY=your_bold_api_key
BOLD_SECRET_KEY=your_bold_secret_key
BOLD_ENVIRONMENT=production
BOLD_WEBHOOK_SECRET=your_webhook_secret
BOLD_PRODUCTION_MODE=true

# ===============================================
# CONFIGURACIÓN DE NOTIFICACIONES PUSH
# ===============================================
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@sequoiaspeed.com.co

# ===============================================
# CONFIGURACIÓN DE SEGURIDAD
# ===============================================
SESSION_SECRET_KEY=your_session_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
CSRF_TOKEN_NAME=csrf_token

# ===============================================
# CONFIGURACIÓN DE ARCHIVOS
# ===============================================
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/uploads
MAX_FILE_UPLOADS=20

# ===============================================
# CONFIGURACIÓN DE LOGS
# ===============================================
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_PATH=/var/log/sequoia-speed
LOG_CHANNEL=daily

# ===============================================
# CONFIGURACIÓN DE CACHE
# ===============================================
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PATH=/tmp/cache

# ===============================================
# CONFIGURACIÓN DE SESIÓN
# ===============================================
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ===============================================
# CONFIGURACIÓN DE MANTENIMIENTO
# ===============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistema en mantenimiento. Vuelva pronto."

# ===============================================
# CONFIGURACIÓN DE DESARROLLO (Solo para desarrollo)
# ===============================================
